{
    "manifest_version": 3,
    "name": "Freebandz",
    "version": "1.0",
    "description": "A browser extension for transcribing videos verbatim.",
    "permissions": [
      "activeTab",
      "https://api.openai.com/*"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }
  